<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121517"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ftab2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/course_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#24282b"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:id="@+id/q_str_lay1"
            android:background="#24282b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:background="#24282b"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_q_exp_lay1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="#24282b"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:text="The Foundation"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/foundbut"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center" />

            <Button
                android:id="@+id/foundedbut"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center" />

        </LinearLayout>

            <TextView
                android:id="@+id/classes_tv_1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="#24282b"
                android:paddingLeft="13dp"
                android:paddingBottom="6dp"
                android:text="2 CLASSES"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#88898A"
                android:textSize="12sp" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>




    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r1foundation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="13.5dp" />


</LinearLayout>