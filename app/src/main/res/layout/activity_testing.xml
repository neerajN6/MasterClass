<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".uiux.Testing">

    <ImageView
        android:id="@+id/athrvedLogoInAddMentor"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/athrved_logo_w" />

    <Button
        android:id="@+id/mAddVideo"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2B73C9"
        android:fontFamily="@font/amiko_bold"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="#F2FAFF" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/athrvedLogoInAddMentor"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/DesignationIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:src="@drawable/video_title" />


        <EditText
            android:id="@+id/editTextVideoTitle"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/DesignationIconIcon"
            android:backgroundTint="#529BF2"
            android:fontFamily="@font/amiko_semibold"
            android:hint="Video Title"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#F2FAFF"
            android:textColorHint="#575D61"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:src="@drawable/video_id" />

        <EditText
            android:id="@+id/editTextVideoId"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/mailIcon"
            android:backgroundTint="#529BF2"
            android:hint="Video Id"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="#575D61"
            android:textSize="20dp" />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3">

        <Spinner
            android:id="@+id/TopicSpinnerForAdminPage"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_weight="1"
            android:background="#F4F8FB"
            android:gravity="center"
            android:popupBackground="#F4F8FB" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/CourseSpinnerForAdminPage"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#F4F8FB"
            android:popupBackground="#F4F8FB" />

        <Spinner
            android:id="@+id/FreeSpinnerForAdminPage"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#F4F8FB"
            android:popupBackground="#F4F8FB" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>