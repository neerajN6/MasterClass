<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TermsAndCondition">

    <ImageButton
        android:id="@+id/backBtnInTermsAndConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:padding="5dp"
        android:src="@drawable/back_arrow_button" />

    <ImageView
        android:id="@+id/athrvedLogoInTermsAndCondition"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/athrved_logo_white" />

    <TextView
        android:id="@+id/termsAndConditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/athrvedLogoInTermsAndCondition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Terms And Condition"
        android:textColor="#F2FAFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/termsOfServiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termsAndConditionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Terms of Service"
        android:textColor="#F2FAFF"
        android:textSize="30dp" />

</RelativeLayout>