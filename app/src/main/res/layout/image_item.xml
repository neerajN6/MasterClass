<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/black"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="112dp"
            android:layout_height="145dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/amaranth"
            android:inputType="textMultiLine"
            android:text="Name"
            android:textColor="#F2FAFF"
            android:textSize="27sp"
            app:layout_constraintStart_toEndOf="@+id/image_view_upload"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_email"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/amaranth"
            android:text="Email"
            android:inputType="textMultiLine"
            android:textColor="#F2FAFF"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_upload"
            app:layout_constraintTop_toBottomOf="@id/text_view_designation" />

        <TextView
            android:id="@+id/text_view_designation"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:inputType="textMultiLine"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Designation"
            android:textColor="#A3AAAE"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_upload"
            app:layout_constraintTop_toBottomOf="@id/text_view_name" />

        <TextView
            android:id="@+id/text_view_phNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/amaranth"
            android:text="Phone No"
            android:textColor="#F2FAFF"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_upload"
            app:layout_constraintTop_toBottomOf="@id/text_view_email" />

        <TextView
            android:id="@+id/text_view_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="30dp"
            android:text="Description"
            android:textColor="#F2FAFF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_upload" />

        <View
            android:id="@+id/left_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>