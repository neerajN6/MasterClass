<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#121517"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="168dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp">

        <ImageView
            android:id="@+id/freeimgbig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/bookmarkfree_border"
            android:layout_width="42dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_baseline_bookmark_border_24" />

        <Button
            android:id="@+id/bookmarkfree"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@drawable/ic_baseline_bookmark_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/freec_title"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:layout_marginLeft="14dp"
        android:text="Playing with Grid -\nWeb design Fundamentals"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/freec_topic"
        android:textSize="12sp"
        android:textColor="#2b73c9"
        android:text="WEBFLOW"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false">
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/freec1_image"
                android:src="@mipmap/ic_launcher"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/freec2_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-7dp"
                android:layout_toRightOf="@+id/freec1_image"

                />
        </RelativeLayout>

        <TextView
            android:id="@+id/freec_author"
            android:text="Goutam Naik"

            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>